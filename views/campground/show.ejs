<%- include("../partials/header") %>
<div style="margin-top:100px" class="container">
		<div class="row">
			<div class="col-md-3">
				<p class="lead">Bootcamp!</p>
				<div class="list-group">
					<li class="list-group-item active">Item 1</li>
					<li class="list-group-item">Item 2</li>
					<li class="list-group-item">Item 3</li>
				</div>
			</div>
			<div class="col-md-9">
				<div class="thumbnails">
					<img style="width:100%" class="img-responsive" src="<%= camp.image %>">
					<div class="caption-full">
						<h3> <p><%= camp.name %></p> </h3>
						<p><%= camp.description %> </p>
						<h4> <p>Created by <%= camp.author.username %> </p> </h4>
					</div>
			
				</div>
				<div class="well">
						<div class="text-right">
							<a class="btn btn-success" href="/campground/<%=camp._id%>/comments/new">Add a new comment</a>	
						</div>
					
					<% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-primary text-left" href="/campground/<%=camp._id%>/edit">Edit Post</a>
						<form style="display:inline" action="/campground/<%= camp._id %>?_method=DELETE" method="POST">
						  <button class="btn btn-danger"> Delete Post </button>

						</form>
					
					<% } %>
					
					<hr>
				    <% camp.comments.forEach(function(comment){ %>
						<div class="row">
							<div class="col-md-12">
								<strong><p> <%= comment.author.username %></strong> - <%= comment.text %> </p>
								<a class="btn btn-xs btn-warning" href="/campground/<%= camp._id %>/comments/<%= comment.author.id %>/edit">	Edit	 </a>
					<% }) %>
							</div>
						
						</div>
				</div>
		
			</div>

			
		</div>

		
	</div>
<%- include("../partials/footer") %>

